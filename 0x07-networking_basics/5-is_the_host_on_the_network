#!/usr/bin/env bash
#!/bin/bash

# Check if an IP address argument is provided
if [ $# -eq 0 ]; then
    echo "Usage: $0 {IP_ADDRESS}"
    exit 1
fi

# Extract the IP address from the argument
ip_address=$1

# Perform the ping five times
for ((i=1; i<=5; i++)); do
    echo "Ping $i:"
    ping -c 1 $ip_address
    echo
done

